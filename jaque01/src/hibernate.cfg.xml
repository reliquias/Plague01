<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC 
"-//Hibernate/Hibernate Configuration DTD 3.0//EN" 
"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
	<session-factory>
		<property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
	    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
	    <property name="hibernate.connection.url">jdbc:mysql://localhost/jaquebd</property>
	    <property name="hibernate.connection.username">root</property>
	    <property name="hibernate.connection.password">asenna</property>
	   
<!-- 	    <property name="connection.datasource">java:/comp/env/jdbc/BgiWebBd</property> -->
	    <property name="hibernate.hbm2ddl.auto">update</property>
	    <property name="hibernate.transaction.factory_class">org.hibernate.transaction.JDBCTransactionFactory</property>
		<property name="current_session_context_class">thread</property>
	    
	     <!-- Usando as configurações do C3PO para o pool de conexões--> 
	    <property name="c3po.min_size">5</property>
	    <property name="c3po.max_size">20</property>
	    <property name="c3po.timeout">300</property>
	    <property name="c3po.max_statements">50</property>
	    <property name="c3po.idle_test_period">3000</property>
	    
	     <!--Configuração do debug -->
	    <property name="show_sql">true</property>
	    <property name="format_sql">true</property>
	    <property name="generate_statistics">true</property>
	    <property name="use_sql_coments">true</property>
	    
	    <!-- Mapeamento das classes -->
	    <mapping class="br.com.jaque.modelo.Usuario"/>
	    <mapping class="br.com.jaque.modelo.Instituicao"/>
	    <mapping class="br.com.jaque.modelo.Produto"/>
	    <mapping class="br.com.jaque.modelo.Doacao"/>
	    </session-factory>
</hibernate-configuration>

